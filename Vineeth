package Example; import java.util.Arrays; import java.util.Scanner; public class Annagram { public static void main(String[] args) { String a = "TAm"; String b = "mat"; String e= a.toLowerCase(); char c[] = e.toCharArray(); char d[]= b.toCharArray(); Arrays.sort(c); Arrays.sort(d); boolean f = Arrays.equals(c,d); if(f == true) { System.out.println("String is equal"); } else{ System.out.println("String is not an equal"); } } }//anagram
